<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/colorDark"
        android:text="@string/_0_00"
        android:textColor="@color/colorText"
        android:textSize="@dimen/size"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/BLn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/BC"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BTan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/tg_x"
        android:textColor="@color/colorFunc"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/BCos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/B7"
        app:layout_constraintTop_toBottomOf="@id/BLn" />

    <Button
        android:id="@+id/BCos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/cos_x"
        android:textColor="@color/colorFunc"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/BSin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/B4"
        app:layout_constraintTop_toBottomOf="@id/BTan" />

    <Button
        android:id="@+id/BSin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/sin_x"
        android:textColor="@color/colorFunc"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/BExp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/B1"
        app:layout_constraintTop_toBottomOf="@id/BCos" />

    <Button
        android:id="@+id/BLn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/ln_x"
        android:textColor="@color/colorFunc"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/BTan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/BPow"
        app:layout_constraintTop_toBottomOf="@id/text" />

    <Button
        android:id="@+id/BPow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/pow"
        android:textColor="@color/colorFunc"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/B7"
        app:layout_constraintLeft_toRightOf="@id/BLn"
        app:layout_constraintRight_toLeftOf="@id/BBracketOpen"
        app:layout_constraintTop_toBottomOf="@id/text" />

    <Button
        android:id="@+id/BExp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/e_x"
        android:textColor="@color/colorConst"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/BPi"
        app:layout_constraintTop_toBottomOf="@id/BSin" />

    <Button
        android:id="@+id/BPi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/pi"
        android:textColor="@color/colorConst"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/BExp"
        app:layout_constraintRight_toLeftOf="@id/B0"
        app:layout_constraintTop_toBottomOf="@id/B1" />

    <Button
        android:id="@+id/B0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/_0"
        android:textColor="@color/colorText"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/BPi"
        app:layout_constraintRight_toLeftOf="@id/BPoint"
        app:layout_constraintTop_toBottomOf="@id/B2" />

    <Button
        android:id="@+id/B1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/_1"
        android:textColor="@color/colorText"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/BPi"
        app:layout_constraintLeft_toRightOf="@id/BSin"
        app:layout_constraintRight_toLeftOf="@id/B2"
        app:layout_constraintTop_toBottomOf="@id/B4" />

    <Button
        android:id="@+id/B2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/_2"
        android:textColor="@color/colorText"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/B0"
        app:layout_constraintLeft_toRightOf="@id/B1"
        app:layout_constraintRight_toLeftOf="@id/B3"
        app:layout_constraintTop_toBottomOf="@id/B5" />

    <Button
        android:id="@+id/B3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/_3"
        android:textColor="@color/colorText"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/BPoint"
        app:layout_constraintLeft_toRightOf="@id/B2"
        app:layout_constraintRight_toLeftOf="@id/BSum"
        app:layout_constraintTop_toBottomOf="@id/B6" />

    <Button
        android:id="@+id/B4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/_4"
        android:textColor="@color/colorText"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/B1"
        app:layout_constraintLeft_toRightOf="@id/BCos"
        app:layout_constraintRight_toLeftOf="@id/B5"
        app:layout_constraintTop_toBottomOf="@id/B7" />

    <Button
        android:id="@+id/B5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/_5"
        android:textColor="@color/colorText"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/B2"
        app:layout_constraintLeft_toRightOf="@id/B4"
        app:layout_constraintRight_toLeftOf="@id/B6"
        app:layout_constraintTop_toBottomOf="@id/B8" />

    <Button
        android:id="@+id/B6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/_6"
        android:textColor="@color/colorText"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/B3"
        app:layout_constraintLeft_toRightOf="@id/B5"
        app:layout_constraintRight_toLeftOf="@id/BMinus"
        app:layout_constraintTop_toBottomOf="@id/B9" />

    <Button
        android:id="@+id/B7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/_7"
        android:textColor="@color/colorText"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/B4"
        app:layout_constraintLeft_toRightOf="@id/BTan"
        app:layout_constraintRight_toLeftOf="@id/B8"
        app:layout_constraintTop_toBottomOf="@id/BPow" />

    <Button
        android:id="@+id/B8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/_8"
        android:textColor="@color/colorText"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/B5"
        app:layout_constraintLeft_toRightOf="@id/B7"
        app:layout_constraintRight_toLeftOf="@id/B9"
        app:layout_constraintTop_toBottomOf="@id/BBracketOpen" />

    <Button
        android:id="@+id/B9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/_9"
        android:textColor="@color/colorText"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/B6"
        app:layout_constraintLeft_toRightOf="@id/B8"
        app:layout_constraintRight_toLeftOf="@id/BMulti"
        app:layout_constraintTop_toBottomOf="@id/BBracketClose" />

    <Button
        android:id="@+id/BPoint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/point"
        android:textColor="@color/colorText"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/B0"
        app:layout_constraintRight_toLeftOf="@id/BEqual"
        app:layout_constraintTop_toBottomOf="@id/B3" />

    <Button
        android:id="@+id/BDivision"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/division"
        android:textColor="@color/colorFunc"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/BMulti"
        app:layout_constraintLeft_toRightOf="@id/BBracketClose"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BC" />

    <Button
        android:id="@+id/BMulti"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/multi"
        android:textColor="@color/colorFunc"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/BMinus"
        app:layout_constraintLeft_toRightOf="@id/B9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BDivision" />

    <Button
        android:id="@+id/BSum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/sum"
        android:textColor="@color/colorFunc"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/BEqual"
        app:layout_constraintLeft_toRightOf="@id/B3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BMinus" />

    <Button
        android:id="@+id/BMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/minus"
        android:textColor="@color/colorFunc"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/BSum"
        app:layout_constraintLeft_toRightOf="@id/B6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BMulti" />

    <Button
        android:id="@+id/BBracketClose"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/bracket_close"
        android:textColor="@color/colorFunc"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/B9"
        app:layout_constraintLeft_toRightOf="@id/BBracketOpen"
        app:layout_constraintRight_toLeftOf="@id/BDivision"
        app:layout_constraintTop_toBottomOf="@id/text" />

    <Button
        android:id="@+id/BBracketOpen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/bracket_open"
        android:textColor="@color/colorFunc"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/B8"
        app:layout_constraintLeft_toRightOf="@id/BPow"
        app:layout_constraintRight_toLeftOf="@id/BBracketClose"
        app:layout_constraintTop_toBottomOf="@id/text" />

    <Button
        android:id="@+id/BEqual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorDark"
        android:text="@string/equal"
        android:textColor="@color/colorFunc"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/BPoint"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BSum" />

    <Button
        android:id="@+id/BC"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorDark"
        android:text="@string/delete"
        android:textColor="@color/colorFunc"
        android:textSize="@dimen/size"
        app:layout_constraintBottom_toTopOf="@id/BDivision"
        app:layout_constraintLeft_toRightOf="@id/text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>